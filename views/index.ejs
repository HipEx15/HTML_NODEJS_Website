        <% if(bauturi){ %>  
            <h1 id="table_title">Comandați băutura dorită</h1>

            <table class="table_showcase">
                <tr>
                    <th>ID</th>
                    <th>Nume produs</th>
                    <th>Informații produs</th>
                    <th>Preț (RON)</th>
                    <th>Cantitate</th>
                </tr>

                <% for (var i = 0; i < bauturi.length; i++){ %>
                    <tr>
                        <td><%= bauturi[i].id %></td>
                        <td><%= bauturi[i].nume %></td>
                        <td><%= bauturi[i].informatii %></td>
                        <td><%= bauturi[i].pret %></td>
                        
                        <% if(user){ %>
                        <form action="/adaugare-cos" method="POST">
                            <td><input type="number" id="quantity" name="id_quanty" min="1" value="1"></td>
                            <td><button class="button_add" type = "submit" name="id" value="<%=bauturi[i].id%>">Adaugă în coș</button></td>   
                        </form>
                        <%}else{%>
                            <td><input disabled type="number" id="quantity" name="id_quanty" value="0"></td>
                            <td><button disabled class="button_addHidden">Adaugă în coș</button></td>
                        <% } %>
                       
                    </tr>
                <% } %>

            </table>
        <% } %>

        <br/>
        <br/>
        <br/>
    

</section>